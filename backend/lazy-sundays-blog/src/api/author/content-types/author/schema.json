{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "favoriteColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "bio": {
      "type": "text",
      "maxLength": 250
    },
    "article": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::article.article",
      "mappedBy": "author"
    },
    "linkTrees": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::link-tree.link-tree",
      "mappedBy": "author"
    }
  }
}
