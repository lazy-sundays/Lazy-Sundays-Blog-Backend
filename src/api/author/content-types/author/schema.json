{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "favoriteColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "bio": {
      "type": "text",
      "maxLength": 250
    },
    "linkTree": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::link-tree.link-tree",
      "mappedBy": "author"
    },
    "articles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article",
      "mappedBy": "authors"
    },
    "pronouns": {
      "type": "customField",
      "options": [
        "he/him/his",
        "she/her/hers",
        "they/them/theirs",
        "it/it/its",
        ""
      ],
      "customField": "plugin::multi-select.multi-select"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    }
  }
}
